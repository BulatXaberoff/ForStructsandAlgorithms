using System;
namespace Search
{
    class Program
    {
        static void Search(int []arr,int key)
        {
           
            int index = -1;
            for (int i = 0; i < arr.Length; i++)
            {
                if (arr[i] == key)
                {
                    index = i;
                    Console.WriteLine($"Индекс ключа:{index + 1}");
                }
            }
            if (index == -1)
            {
                Console.WriteLine("Искомый элемент не найден");
            }
        }
        static int[] FillArr(int []arr,int size)
        {
            arr = new int[size];
            Console.WriteLine("Вводите значения массива:");
            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = int.Parse(Console.ReadLine());
            }
            return arr;
        }
        static void ShowArr(int []arr,int size)
        {
            Console.WriteLine("Исходный массив");
            for (int i = 0; i < arr.Length; i++)
            {
                Console.Write($"{arr[i]} ");
            }
            Console.WriteLine();
        }

        static void Main(string[] args)
        {
            Console.WriteLine("Введите размер массива:");
            int Size = int.Parse(Console.ReadLine());
            int[] arr = new int[Size];
            arr=FillArr(arr, Size);
            ShowArr(arr, Size);
            Console.WriteLine("Введите ключ:");
            int k = int.Parse(Console.ReadLine());
            Search(arr,k);
            
        }
    }
}
